#!/bin/bash

set -x

# chown_if_exists
# input: matches `chown` command, see `man chown`
# Simply, this checks that the file you're trying to chown actually exists
# before making the chown call. DRY'ing the rest of this script's checks.
chown_if_exists()
{
	# the last argument of chown is the file or path
	path="${@:${#@}}"
	if [ -e "$path" ]; then
		chown $@
	else
		echo "skipping, path does not exist: $path"
	fi
}

# Fix GitLab permissions
	# Fix data storage
	chown_if_exists -R 1001:0 /var/opt/gitlab/.ssh
	chown_if_exists -R 1001:0 /var/opt/gitlab/.gitconfig
	chown_if_exists -R 1001:0 /var/opt/gitlab/git-data
	chown_if_exists -R 1001:0 /var/opt/gitlab/gitlab-ci/builds
	chown_if_exists -R 1001:0 /var/opt/gitlab/gitlab-rails
	chown_if_exists -R 1001:0 /var/opt/gitlab/gitlab-shell
	chown_if_exists -R 1001:0 /var/opt/gitlab/gitlab-workhorse

	# Fix log storage
	chown_if_exists 1001 /var/opt/gitlab/gitlab-workhorse
	chown_if_exists 1001 /var/log/gitlab/gitlab-rails
	chown_if_exists 1001 /var/log/gitlab/gitlab-shell
	chown_if_exists 1001 /var/log/gitlab/sidekiq
	chown_if_exists 1001 /var/log/gitlab/unicorn

	# Update log files
	chown_if_exists -R 1001:0 /var/log/gitlab/gitlab-rails/*.log
	chown_if_exists -R 1001:0 /var/log/gitlab/gitlab-shell/*.log
	chown_if_exists -R 1001:0 /var/log/gitlab/unicorn/*.log

# Fix nginx buffering directory permission
	chown_if_exists -R 1001:0 /var/opt/gitlab/nginx/*_temp
	chown_if_exists -R 1001:0 /var/opt/gitlab/nginx/*_cache

# Fix database storage and logs
	chown_if_exists -R 1001:0 /var/opt/gitlab/postgresql
	chown_if_exists 1001 /var/log/gitlab/postgresql

# Fix prometheus storage and logs
	chown_if_exists -R 1001:0 /var/opt/gitlab/prometheus
	chown_if_exists 1001 /var/log/gitlab/prometheus

# Fix redis storage and logs
	chown_if_exists -R 1001:0 /var/opt/gitlab/redis
		chown_if_exists 1001:0 /var/opt/gitlab/redis
	chown_if_exists 1001 /var/log/gitlab/redis

# Fix registry storage
    chown_if_exists -R 1001:0 /var/opt/gitlab/gitlab-rails/shared/registry
